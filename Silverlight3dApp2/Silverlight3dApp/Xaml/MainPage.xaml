    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d"
    d:DesignHeight="1024" d:DesignWidth="800">

    <Grid x:Name="LayoutRoot" Background="White">
        <!--3D drawing surface-->
        <DrawingSurface x:Name="myDrawingSurface" Draw="myDrawingSurface_Draw" Width="1024" Height="800"/>
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="51,652,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
    </Grid>
</UserControl>